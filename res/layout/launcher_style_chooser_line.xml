<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="210dip"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dip"
		android:layout_marginBottom="2dip"
        >

        <TextView android:id="@+id/preview_widget_img"
		    android:background="#00000000"
		    android:layout_width="160dip"
		    android:layout_height="match_parent"
		
		    android:paddingTop="5dip"
		    android:paddingBottom="2dip"
		    android:drawablePadding="0dip"
		
		    android:textSize="16dip"
		    android:singleLine="true"
		    android:ellipsize="marquee"
		    android:fadingEdge="horizontal"
		    android:gravity="top|center_horizontal" 
		    android:textColor="@android:color/black"
		    android:layout_alignParentLeft="true"/>
		    
	    <ImageView android:src="@drawable/btn_check_buttonless_on" 
	    		android:tag="widget"
		        android:layout_height="wrap_content" 
		        android:layout_width="wrap_content" 
		        android:id="@+id/preview_widget_img_check" 
		        android:layout_marginBottom="-10dip" 
		        android:layout_toRightOf="@id/preview_widget_img" 
		        android:layout_marginLeft="-40dip" 
		        android:layout_alignBottom="@id/preview_widget_img"
		        android:visibility="gone"></ImageView>
	    
	    <TextView android:id="@+id/preview_apps_img"
		    android:background="#00000000"
		    android:layout_width="160dip"
		    android:layout_height="match_parent"
		    
		    android:paddingTop="5dip"
		    android:paddingBottom="2dip"
		    android:drawablePadding="0dip"
		
		    android:textSize="16dip"
		    android:singleLine="true"
		    android:ellipsize="marquee"
		    android:fadingEdge="horizontal"
		    android:gravity="top|center_horizontal" 
		    android:textColor="@android:color/black"
		    android:layout_alignParentRight="true"/>
		<ImageView android:src="@drawable/btn_check_buttonless_on" 
				android:tag="apps"
		        android:layout_height="wrap_content" 
		        android:layout_width="wrap_content" 
		        android:id="@+id/preview_apps_img_check" 
		        android:layout_marginBottom="-10dip" 
		        android:layout_toRightOf="@id/preview_apps_img" 
		        android:layout_marginLeft="-40dip" 
		        android:layout_alignBottom="@id/preview_apps_img"
		        android:visibility="gone"></ImageView>
</RelativeLayout>
